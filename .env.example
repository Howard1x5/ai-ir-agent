# AI IR Agent Environment Configuration
# Copy this to .env and fill in your values

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# FLARE VM SSH Configuration (Internet-connected analysis VM)
FLARE_VM_HOST=192.168.1.100
FLARE_VM_USER=analyst
FLARE_VM_PASSWORD=your_password_here
FLARE_VM_JUMP_HOST=192.168.1.1
FLARE_VM_JUMP_USER=root

# Detonation VM (Isolated/air-gapped - for malware execution)
# This VM should have NO network connectivity for safe dynamic analysis
DETONATION_VM_HOST=192.168.1.110

# REMnux VM SSH Configuration (optional, for Linux malware)
REMNUX_VM_HOST=192.168.1.102
REMNUX_VM_USER=analyst
REMNUX_VM_PASSWORD=your_password_here

# Proxmox Configuration
PROXMOX_HOST=192.168.1.1
PROXMOX_USER=root

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent Configuration
MAX_EXECUTION_TIME=300
LOG_LEVEL=INFO
